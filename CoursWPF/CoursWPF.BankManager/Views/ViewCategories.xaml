<UserControl x:Class="CoursWPF.BankManager.Views.ViewCategories"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CoursWPF.BankManager.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

  <DataGrid ItemsSource="{Binding ItemsSource}" SelectedItem="{Binding SelectedItem}" Style="{StaticResource DataGridStyle}">
    <DataGrid.Columns>
      <DataGridTextColumn Header="Libellé" Binding="{Binding Label}"/>
    </DataGrid.Columns>
  </DataGrid>

</UserControl>
