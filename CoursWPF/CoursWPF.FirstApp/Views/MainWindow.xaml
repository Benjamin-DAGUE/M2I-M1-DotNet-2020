<mah:MetroWindow x:Class="CoursWPF.FirstApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:local="clr-namespace:CoursWPF.FirstApp"
        xmlns:views="clr-namespace:CoursWPF.FirstApp.Views"
        mc:Ignorable="d"
        Title="Ma première application" Height="450" Width="800"
        FontSize="20">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition/>
    </Grid.RowDefinitions>

    <Menu>
      <MenuItem Header="Fichier">
        <MenuItem Header="Sauvegarder"  Command="{Binding Save}"/>
        <Separator/>
        <MenuItem Header="Quitter"      Command="{Binding Exit}"/>
      </MenuItem>
    </Menu>

    <TabControl Grid.Row="1">
      <TabItem Header="Personnes" DataContext="{Binding }">
        <views:ViewPeople/>
      </TabItem>
      <TabItem Header="Véhicules">
        <views:ViewVehicules/>
      </TabItem>
    </TabControl>

  </Grid>
</mah:MetroWindow>